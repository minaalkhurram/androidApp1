<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/beige"
    android:orientation="vertical"
    tools:context=".page2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/beige"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="76dp"
            android:layout_height="match_parent"
            android:background="@color/beige"
            android:src="@drawable/back_button_svgrepo_com"
            >

        </ImageButton>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/oneFrag"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="2dp"
            android:layout_weight="1"
            android:background="@color/darkBlue"
            android:drawableLeft="@drawable/baseline_phone_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/beige"
            android:paddingLeft="40dp"
            android:text="@string/oneFrag"
            android:textColor="@color/beige"
            android:textSize="@dimen/textSizepg2" />

        <Button
            android:id="@+id/twoFrag"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:layout_weight="1"
            android:background="@color/darkBlue"
            android:drawableLeft="@drawable/baseline_3p_24"
            android:drawablePadding="10dp"
            android:drawableTint="@color/beige"
            android:paddingLeft="40dp"

            android:text="@string/twoFrag"
            android:textColor="@color/beige"
            android:textSize="@dimen/textSizepg2" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="623dp"
        android:orientation="vertical"
        >
        <fragment
            android:id="@+id/listfrag"
            android:name="com.example.assignment1.Fragment1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            tools:layout="@layout/fragment_1" />

        <fragment
            android:id="@+id/detailfrag"
            android:name="com.example.assignment1.Fragment2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            tools:layout = "@layout/fragment_2" />

    </LinearLayout>


</LinearLayout>